@model IEnumerable<DBStoreSport.Models.ProductStockHistory>
@{
    ViewBag.Title = "Lịch sử nhập/xuất kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">📜 Lịch sử nhập/xuất kho</h2>

<a href="@Url.Action("Index", "AdminStock")" class="btn btn-back mb-3">
    ⬅ Quay lại Quản lý tồn kho
</a>

<table class="table table-bordered table-hover align-middle shadow-sm bg-white">
    <thead style="background-color:#0d6efd; color:white;">
        <tr>
            <th>Ngày thực hiện</th>
            <th>Sản phẩm</th>
            <th>Thao tác</th>
            <th>Số lượng</th>
            <th>Ghi chú</th>
            <th>Người thực hiện</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @(item.ActionDate != null ? Convert.ToDateTime(item.ActionDate).ToString("dd/MM/yyyy HH:mm") : "")
                <td>@item.Product.NamePro</td>
                <td>@item.ActionType</td>
                <td class="fw-bold" style="color:@(item.QuantityChange > 0 ? "green" : "red")">
                    @(item.QuantityChange > 0 ? "+" : "")@item.QuantityChange
                </td>
                <td>@item.Note</td>
                <td>@item.AdminUser</td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-back {
        background-color: #f8fbff;
        border: 1px solid #0d6efd;
        color: #0d6efd;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s ease-in-out;
    }

        .btn-back:hover {
            background-color: #0d6efd;
            color: white;
            box-shadow: 0 0 6px rgba(13, 110, 253, 0.4);
        }
</style>
