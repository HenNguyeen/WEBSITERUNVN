@model DBStoreSport.Models.Customer

@{
    ViewBag.Title = "Xác nhận xoá khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 w-100" style="max-width: 500px; border-radius: 18px;">
        <h2 class="mb-4 text-center text-danger fw-bold">⚠️ Xác nhận xoá khách hàng</h2>
        <div class="alert alert-warning mb-4">
            Bạn có chắc muốn xoá khách hàng <strong>@Model.NameCus</strong> (Email: <strong>@Model.EmailCus</strong>) không?
        </div>
        <table class="table table-borderless mb-4">
            <tbody>
                <tr>
                    <th class="text-end" style="width: 40%">Số điện thoại:</th>
                    <td>@Model.PhoneCus</td>
                </tr>
                <tr>
                    <th class="text-end">Tên đăng nhập:</th>
                    <td>@Model.UserName</td>
                </tr>
            </tbody>
        </table>
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-danger">Xoá</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Huỷ</a>
            </div>
        }
    </div>
</div>
