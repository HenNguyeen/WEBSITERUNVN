@model IEnumerable<DBStoreSport.Models.Customer>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/admin-dashboard.css" rel="stylesheet" />

<div class="admin-container">
    <div class="admin-header">
        <h2>👤 Danh sách khách hàng</h2>
        <a href="@Url.Action("Create")" class="admin-add-btn">➕ Thêm khách hàng mới</a>
    </div>
    <table class="admin-table">
        <thead>
            <tr>
                <th>Họ tên</th>
                <th>Điện thoại</th>
                <th>Email</th>
                <th>Tài khoản</th>
                <th>Mật khẩu</th>
                <th style="width: 220px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NameCus)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneCus)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmailCus)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>
                        @(new string('*', item.Password != null ? item.Password.Length : 0))
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.IDCus })" class="admin-action-btn edit">✏️ Sửa</a>
                        <a href="@Url.Action("Details", new { id = item.IDCus })" class="admin-action-btn detail">🔍 Chi tiết</a>
                        <a href="@Url.Action("Delete", new { id = item.IDCus })" class="admin-action-btn delete">🗑️ Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
