@model DBStoreSport.Models.Customer

@{
    ViewBag.Title = "Thông tin cá nhân";
}

<div class="container mt-4">
    <div class="card shadow-lg" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-user-circle me-2"></i>Thông tin cá nhân</h3>
        </div>
        <div class="card-body">
            <table class="table table-borderless mb-0">
                <tr>
                    <th>Họ tên</th>
                    <td>@Model.NameCus</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.EmailCus</td>
                </tr>
                <tr>
                    <th>Số điện thoại</th>
                    <td>@Model.PhoneCus</td>
                </tr>
                <tr>
                    <th>Tên đăng nhập</th>
                    <td>@Model.UserName</td>
                </tr>
            </table>
            <div class="mt-4 text-end">
                <a href="@Url.Action("Edit", "Customers", new { id = Model.IDCus })" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary ms-2">
                    <i class="fas fa-arrow-left"></i> Quay lại trang chủ
                </a>
            </div>
        </div>
    </div>
</div> 