@model DBStoreSport.Models.Customer

@{
    ViewBag.Title = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .profile-card {
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        background: #fff;
        padding: 2.5rem 2rem 2rem 2rem;
        max-width: 420px;
        margin: 40px auto;
    }
    .profile-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
        background: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: #6c757d;
    }
    .profile-info th {
        width: 40%;
        color: #6c757d;
        font-weight: 500;
        text-align: right;
        border: none;
        padding-right: 1rem;
    }
    .profile-info td {
        border: none;
        font-weight: 600;
        color: #212529;
    }
    .profile-actions .btn {
        border-radius: 20px;
        min-width: 110px;
        font-weight: 500;
    }
</style>

<div class="profile-card">
    <div class="d-flex flex-column align-items-center mb-3">
        <div class="profile-avatar bg-light">
            <span class="bi bi-person-circle"></span>
        </div>
        <h3 class="fw-bold text-primary mb-0">@Model.NameCus</h3>
        <div class="text-muted mb-2" style="font-size: 1rem;">Khách hàng</div>
    </div>
    <table class="table profile-info mb-4">
        <tbody>
            <tr>
                <th><i class="bi bi-telephone"></i> Số điện thoại:</th>
                <td>@Model.PhoneCus</td>
            </tr>
            <tr>
                <th><i class="bi bi-envelope"></i> Email:</th>
                <td>@Model.EmailCus</td>
            </tr>
            <tr>
                <th><i class="bi bi-person"></i> Tên đăng nhập:</th>
                <td>@Model.UserName</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center gap-2 profile-actions">
        <a href="@Url.Action("Edit", new { id = Model.IDCus })" class="btn btn-warning"><i class="bi bi-pencil"></i> Sửa</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
    </div>
</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
