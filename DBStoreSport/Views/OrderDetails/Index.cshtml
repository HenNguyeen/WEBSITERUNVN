@model IEnumerable<DBStoreSport.Models.OrderDetail>

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/admin-dashboard.css" rel="stylesheet" />

<div class="admin-container">
    <div class="admin-header">
        <h2>📋 Chi tiết đơn hàng</h2>
        <a href="@Url.Action("Create")" class="admin-add-btn">➕ Thêm chi tiết</a>
    </div>
    <table class="admin-table">
        <thead>
            <tr>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Địa chỉ giao hàng</th>
                <th>Tên sản phẩm</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderPro.AddressDeliverry)</td>
                <td>@Html.DisplayFor(modelItem => item.Product.NamePro)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ID }, new { @class = "admin-action-btn edit" })
                    @Html.ActionLink("Details", "Details", new { id=item.ID }, new { @class = "admin-action-btn detail" })
                    @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "admin-action-btn delete" })
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
