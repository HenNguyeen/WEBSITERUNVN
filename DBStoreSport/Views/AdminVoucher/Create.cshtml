@model DBStoreSport.Models.Voucher
@{
    ViewBag.Title = "Thêm Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/admin-dashboard.css" rel="stylesheet" />

<div class="admin-container">
    <div class="admin-header">
        <h2>➕ Thêm Voucher Mới</h2>
        <a href="@Url.Action("Index", "AdminVoucher")" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left"></i>
            Quay lại
        </a>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Thông tin Voucher
                        </h5>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(model => model.Code, "Mã Voucher", new { @class = "form-label fw-bold" })
                                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: SALE2024, GIAM50" } })
                                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                    <small class="form-text text-muted">Mã voucher phải là duy nhất</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(model => model.Type, "Loại giảm giá", new { @class = "form-label fw-bold" })
                                    @Html.DropDownListFor(model => model.Type, 
                                        new SelectList(new[] { 
                                            new { Value = "Percent", Text = "Phần trăm (%)" },
                                            new { Value = "Fixed", Text = "Số tiền cố định (VNĐ)" }
                                        }, "Value", "Text"), 
                                        "Chọn loại giảm giá", 
                                        new { @class = "form-select" })
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(model => model.DiscountValue, "Giá trị giảm", new { @class = "form-label fw-bold" })
                                    @Html.EditorFor(model => model.DiscountValue, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: 10 (10%) hoặc 50000 (50,000 VNĐ)" } })
                                    @Html.ValidationMessageFor(model => model.DiscountValue, "", new { @class = "text-danger" })
                                    <small class="form-text text-muted" id="discountHint">Nhập giá trị giảm giá</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    @Html.LabelFor(model => model.ExpiryDate, "Ngày hết hạn", new { @class = "form-label fw-bold" })
                                    @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                    @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
                                    <small class="form-text text-muted">Chọn ngày voucher hết hiệu lực</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-lightbulb me-2"></i>
                            Hướng dẫn
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle me-2"></i>Loại giảm giá:</h6>
                            <ul class="mb-0">
                                <li><strong>Phần trăm:</strong> Giảm theo % giá trị đơn hàng</li>
                                <li><strong>Số tiền cố định:</strong> Giảm một số tiền nhất định</li>
                            </ul>
                        </div>

                        <div class="alert alert-warning">
                            <h6><i class="fas fa-exclamation-triangle me-2"></i>Lưu ý:</h6>
                            <ul class="mb-0">
                                <li>Mã voucher phải là duy nhất</li>
                                <li>Ngày hết hạn phải sau ngày hiện tại</li>
                                <li>Voucher sẽ tự động hết hiệu lực sau ngày hết hạn</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-save"></i>
                                Tạo Voucher
                            </button>
                            <a href="@Url.Action("Index", "AdminVoucher")" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times"></i>
                                Hủy bỏ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    <script>
        $(document).ready(function () {
            // Cập nhật hint khi thay đổi loại giảm giá
            $('#Type').change(function () {
                updateDiscountHint();
            });

            // Cập nhật hint khi nhập giá trị
            $('#DiscountValue').on('input', function () {
                updateDiscountHint();
            });

            function updateDiscountHint() {
                var type = $('#Type').val();
                var value = $('#DiscountValue').val();
                
                if (type === 'Percent') {
                    $('#discountHint').text('Nhập phần trăm giảm giá (VD: 10 = 10%)');
                } else if (type === 'Fixed') {
                    $('#discountHint').text('Nhập số tiền giảm (VD: 50000 = 50,000 VNĐ)');
                } else {
                    $('#discountHint').text('Nhập giá trị giảm giá');
                }
            }

            // Đặt ngày mặc định là ngày mai
            var tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            var tomorrowStr = tomorrow.toISOString().split('T')[0];
            $('#ExpiryDate').val(tomorrowStr);
        });
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(34,197,94,0.07);
    }

    .card-header {
        background: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
        border-radius: 16px 16px 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .card-body {
        padding: 1.5rem;
    }

    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #dee2e6;
        padding: 0.75rem;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #22c55e;
        box-shadow: 0 0 0 0.2rem rgba(34,197,94,0.25);
    }

    .btn {
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        transition: all 0.2s;
    }

    .alert {
        border-radius: 8px;
        border: none;
    }

    .alert ul {
        padding-left: 1.2rem;
    }

    .alert li {
        margin-bottom: 0.25rem;
    }
</style> 