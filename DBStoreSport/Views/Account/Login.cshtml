@model DBStoreSport.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            width: 100%;
            height: 100vh;
            background-position: center;
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: 'Roboto', Arial, sans-serif;
        }
        .container {
            background-image: url('../../content/images/videoframe_3479.png');
        }

        .form-box {
            max-width: 400px;
            margin: auto;
            margin-top: 60px;
            padding: 36px 32px 28px 32px;
            border-radius: 18px;
            background: transparent;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.22);
            transition: box-shadow 0.3s;
        }

            .form-box:hover {
                box-shadow: 0 12px 40px rgba(0,0,0,0.28);
            }

            .form-box h2 {
                text-align: center;
                margin-bottom: 24px;
                color: #222;
                font-weight: 700;
                letter-spacing: 1px;
            }

        .form-group {
            margin-bottom: 22px;
            position: relative;
        }

            .form-group label {
                font-weight: 500;
                color: #333;
                margin-bottom: 6px;
                display: block;
            }

        .form-control {
            width: 100%;
            padding: 10px 38px 10px 38px;
            border: 1.5px solid #d1d5db;
            border-radius: 8px;
            font-size: 1rem;
            background: #f8fafc;
            transition: border-color 0.2s;
        }

            .form-control:focus {
                border-color: #007bff;
                outline: none;
                background: #fff;
            }

        .input-icon {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #007bff;
            font-size: 1.1rem;
        }

        .btn-primary {
            background: linear-gradient(90deg, #007bff 60%, #0056b3 100%);
            border: none;
            color: #fff;
            font-weight: 600;
            border-radius: 8px;
            padding: 10px 0;
            width: 100%;
            font-size: 1.08rem;
            box-shadow: 0 2px 8px rgba(0,123,255,0.08);
            transition: background 0.2s, box-shadow 0.2s;
        }

            .btn-primary:hover {
                background: linear-gradient(90deg, #0056b3 60%, #007bff 100%);
                box-shadow: 0 4px 16px rgba(0,123,255,0.18);
            }

        .btn-link {
            display: block;
            margin-top: 14px;
            text-align: center;
            color: #007bff;
            font-weight: 500;
            text-decoration: none;
            transition: color 0.2s;
        }

            .btn-link:hover {
                color: #0056b3;
                text-decoration: underline;
            }

        .alert-danger {
            margin-bottom: 18px;
            border-radius: 7px;
        }
    </style>
    <style>
        #loginBtn {
            animation: none !important;
            transform: none !important;
        }
    </style>
  
</head>
<body>
    <div class="container py-lg-5">
        <div class="form-box">
            <h2>Đăng Nhập</h2>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <!-- Hiển thị thông báo lỗi nếu có -->
                if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                {
                    <div class="alert alert-danger text-center">
                        @Html.ValidationMessage("")
                    </div>
                }
                <div class="form-group">
                    <label for="Username">Tên Đăng Nhập</label>
                    <span class="input-icon"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Tên đăng nhập", autocomplete = "username" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="Password">Mật Khẩu</label>
                    <span class="input-icon"><i class="fa fa-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu", autocomplete = "current-password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <a href="@Url.Action("ForgotPassword", "Account")">Quên mật khẩu?</a>

                <button type="submit" class="btn btn-primary" id="loginBtn">
                    <span class="btn-icon"><i class="fa fa-sign-in-alt"></i></span>
                    <span class="btn-text">Đăng Nhập</span>
                    <span class="btn-spinner" style="display:none;"><i class="fa fa-spinner fa-spin"></i></span>
                </button>
                <a href="@Url.Action("Register", "Account" )" class="btn-link">Đăng ký tài khoản</a>
            }
        </div>
    </div>  
</body>
</html>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var form = document.querySelector('.form-box form');
        var btn = document.getElementById('loginBtn');
        if (form && btn) {
            form.addEventListener('submit', function () {
                btn.querySelector('.btn-icon').style.display = 'none';
                btn.querySelector('.btn-text').style.display = 'none';
                btn.querySelector('.btn-spinner').style.display = 'inline-block';
                btn.disabled = true;
            });
        }
    });
</script>



