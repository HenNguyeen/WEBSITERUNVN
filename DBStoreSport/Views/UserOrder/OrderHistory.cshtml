@model List<DBStoreSport.Models.OrderPro>

<h2>Lịch sử mua hàng</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Địa chỉ giao</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.ID</td>
                <td>@(order.DateOrder.HasValue ? order.DateOrder.Value.ToString("dd/MM/yyyy") : "")</td>
                <td>@order.AddressDeliverry</td>
                <td>@order.Status</td>
                <td>
                    @Html.ActionLink("Xem chi tiết", "OrderDetail", "UserOrder", new { id = order.ID }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
