@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-success shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">✅ Đặt hàng thành công!</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h4 class="text-success mb-3">Cảm ơn bạn đã mua hàng!</h4>
                    
                    @if (Session["LastOrderId"] != null)
                    {
                        <div class="alert alert-info">
                            <h5>Thông tin đơn hàng:</h5>
                            <p><strong>Mã đơn hàng:</strong> #@Session["LastOrderId"]</p>
                            <p><strong>Tổng tiền:</strong> <span class="text-danger">@Convert.ToDecimal(Session["LastOrderAmount"] ?? 0).ToString("N0") VNĐ</span></p>
                            <p><strong>Thời gian:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
                        </div>
                    }
                    
                    <div class="alert alert-warning">
                        <h6>📋 Lưu ý:</h6>
                        <ul class="text-start">
                            <li>Đơn hàng của bạn đã được xác nhận và đang được xử lý</li>
                            <li>Chúng tôi sẽ liên hệ với bạn để xác nhận đơn hàng trong vòng 24h</li>
                            <li>Vui lòng giữ lại mã đơn hàng để tra cứu</li>
                            <li>Nếu có thắc mắc, vui lòng liên hệ hotline: 1900-xxxx</li>
                        </ul>
                    </div>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-3">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                        <a href="@Url.Action("ProductList", "Products")" class="btn btn-outline-info">
                            <i class="fas fa-shopping-bag"></i> Tiếp tục mua hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Xóa thông tin đơn hàng khỏi session sau khi hiển thị
    @{
        Session["LastOrderId"] = null;
        Session["LastOrderAmount"] = null;
    }
</script>
