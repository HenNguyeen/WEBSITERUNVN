@model DBStoreSport.Models.ContactMessage
@{
    ViewBag.Title = "Chi tiết liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">📄 Chi tiết liên hệ</h2>

    <div class="card">
        <div class="card-body">
            <p><strong>👤 Họ tên:</strong> @Model.Name</p>
            <p><strong>📧 Email:</strong> @Model.Email</p>
            <p>
                <strong>🕒 Thời gian gửi:</strong>@Model.SentDate?.ToString("dd/MM/yyyy HH:mm")
            </p>
            <p><strong>📝 Nội dung:</strong><br /> @Model.Message</p>
        </div>
    </div>

    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">← Quay lại danh sách</a>
</div>
