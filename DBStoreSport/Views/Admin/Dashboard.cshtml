@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-container">
    <!-- Header Section -->
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="dashboard-title">
                    <i class="fas fa-chart-line me-3"></i>
                    Admin Dashboard
                </h1>
                <p class="dashboard-subtitle">Xin chào quản trị viên <strong>@ViewBag.UserName</strong></p>
                <p class="text-muted">Chào mừng đến với trang quản trị hệ thống RunVn</p>
            </div>
            <div class="col-lg-4 text-end">
                <div class="current-time">
                    <i class="fas fa-clock me-2"></i>
                    <span id="currentTime"></span>
                </div>
                <div class="current-date">
                    <i class="fas fa-calendar me-2"></i>
                    <span id="currentDate"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stat-card stat-card-primary">
                <div class="stat-card-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-number">@ViewBag.TotalOrders</h3>
                    <p class="stat-card-label">Tổng đơn hàng</p>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stat-card stat-card-success">
                <div class="stat-card-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-number">
                        @if (ViewBag.TotalRevenue != null)
                        {
                            @String.Format("₫{0:N0}", ViewBag.TotalRevenue)
                        }
                        else
                        {
                            @("₫0")
                        }
                    </h3>
                    <p class="stat-card-label">Tổng doanh thu</p>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stat-card stat-card-warning">
                <div class="stat-card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-number">@ViewBag.TotalCustomers</h3>
                    <p class="stat-card-label">Tổng khách hàng</p>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="stat-card stat-card-info">
                <div class="stat-card-icon">
                    <i class="fas fa-box"></i>
                </div>
                <div class="stat-card-content">
                    <h3 class="stat-card-number">@ViewBag.TotalProducts</h3>
                    <p class="stat-card-label">Tổng sản phẩm</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Analytics -->
    <div class="row mb-4">
        <div class="col-lg-8 mb-3">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <h5><i class="fas fa-chart-area me-2"></i>Doanh thu theo tháng</h5>
                    <div class="card-actions">
                        <button class="btn btn-sm btn-outline-primary" onclick="window.location.href='@Url.Action("ExportMonthlyRevenueToExcel", "Admin")'">Xuất báo cáo</button>
                    </div>
                </div>
                <div class="dashboard-card-body">
                    <div class="chart-container">
                        <canvas id="revenueChart" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 mb-3">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <h5><i class="fas fa-chart-pie me-2"></i>Phân bố đơn hàng</h5>
                </div>
                <div class="dashboard-card-body">
                    <div class="chart-container">
                        <canvas id="orderChart" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities and Quick Actions -->
    <div class="row">
        <div class="col-lg-6 mb-3">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <h5><i class="fas fa-history me-2"></i>Hoạt động gần đây</h5>
                </div>
                <div class="dashboard-card-body">
                    <div class="activity-list">
                        @if (ViewBag.RecentOrders != null)
                        {
                            foreach (var order in ViewBag.RecentOrders)
                            {
                                <div class="activity-item">
                                    <div class="activity-icon success">
                                        <i class="fas fa-check"></i>
                                    </div>
                                    <div class="activity-content">
                                        <h6>Đơn hàng #@order.ID đã được tạo</h6>
                                        <p class="text-muted">@order.DateOrder</p>
                                    </div>
                                </div>
                            }
                        }
                        @if (ViewBag.RecentCustomers != null)
                        {
                            foreach (var cus in ViewBag.RecentCustomers)
                            {
                                <div class="activity-item">
                                    <div class="activity-icon warning">
                                        <i class="fas fa-user-plus"></i>
                                    </div>
                                    <div class="activity-content">
                                        <h6>Khách hàng mới: @cus.NameCus</h6>
                                        <p class="text-muted">@cus.EmailCus</p>
                                    </div>
                                </div>
                            }
                        }
                        @if (ViewBag.RecentProducts != null)
                        {
                            foreach (var pro in ViewBag.RecentProducts)
                            {
                                <div class="activity-item">
                                    <div class="activity-icon info">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <div class="activity-content">
                                        <h6>Sản phẩm mới: @pro.NamePro</h6>
                                        <p class="text-muted">Giá: @pro.Price</p>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6 mb-3">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <h5><i class="fas fa-bolt me-2"></i>Thao tác nhanh</h5>
                </div>
                <div class="dashboard-card-body">
                    <div class="quick-actions">
                        <div class="row">
                            <div class="col-6 mb-3">
                                <a href="@Url.Action("Index", "Products")" class="quick-action-btn">
                                    <div class="quick-action-icon primary">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <span>Quản lý sản phẩm</span>
                                </a>
                            </div>
                            
                            <div class="col-6 mb-3">
                                <a href="@Url.Action("Index", "OrderProes")" class="quick-action-btn">
                                    <div class="quick-action-icon success">
                                        <i class="fas fa-shopping-cart"></i>
                                    </div>
                                    <span>Quản lý đơn hàng</span>
                                </a>
                            </div>
                            
                            <div class="col-6 mb-3">
                                <a href="@Url.Action("Index", "Customers")" class="quick-action-btn">
                                    <div class="quick-action-icon warning">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <span>Quản lý khách hàng</span>
                                </a>
                            </div>
                            
                            <div class="col-6 mb-3">
                                <a href="@Url.Action("Index", "Categories")" class="quick-action-btn">
                                    <div class="quick-action-icon info">
                                        <i class="fas fa-tags"></i>
                                    </div>
                                    <span>Quản lý danh mục</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- System Status -->
    <div class="row">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <h5><i class="fas fa-server me-2"></i>Trạng thái hệ thống</h5>
                </div>
                <div class="dashboard-card-body">
                    <div class="system-status">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <div class="status-item">
                                    <div class="status-indicator online"></div>
                                    <div class="status-info">
                                        <h6>Database</h6>
                                        <span class="status-text">Online</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <div class="status-item">
                                    <div class="status-indicator online"></div>
                                    <div class="status-info">
                                        <h6>Web Server</h6>
                                        <span class="status-text">Online</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <div class="status-item">
                                    <div class="status-indicator online"></div>
                                    <div class="status-info">
                                        <h6>Email Service</h6>
                                        <span class="status-text">Online</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <div class="status-item">
                                    <div class="status-indicator online"></div>
                                    <div class="status-info">
                                        <h6>Backup System</h6>
                                        <span class="status-text">Online</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Dashboard CSS and JS -->
<link href="~/Content/dashboard.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var revenueData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.MonthlyRevenue ?? new decimal[12]));
    const ctx = document.getElementById('revenueChart').getContext('2d');
    const revenueChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'],
            datasets: [{
                label: 'Doanh thu',
                data: revenueData,
                borderColor: '#2563eb',
                backgroundColor: 'rgba(37,99,235,0.1)',
                fill: true,
                tension: 0.4,
                pointRadius: 4,
                pointBackgroundColor: '#2563eb'
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return value.toLocaleString('vi-VN', { style: 'currency', currency: 'VND', maximumFractionDigits: 0 });
                        }
                    }
                }
            }
        }
    });
</script>
<script src="~/Scripts/dashboard.js"></script>

