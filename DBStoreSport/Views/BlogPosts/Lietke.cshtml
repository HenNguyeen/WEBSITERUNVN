@model List<DBStoreSport.Models.BlogPost>
<div class="container mt-4">
    <h2 class="mb-3">Quản lý Bài Viết Blog</h2>

    <p class="text-muted">Tổng số bài viết: <strong>@Model.Count()</strong></p>

    <table class="table table-bordered table-hover">
        <thead class="bg-light text-dark">
            <tr>
                <th style="width: 120px;">Ảnh</th>
                <th>Tiêu đề</th>
                <th style="width: 140px;">Ngày đăng</th>
                <th style="width: 120px;">Trạng thái</th>
                <th style="width: 150px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        <img src="@Url.Content(item.Image ?? "~/Content/images/no-image.jpg")" style="width:100px; height:70px; object-fit:cover;" />
                    </td>
                    <td>@(item.Title.Length > 60 ? item.Title.Substring(0, 60) + "..." : item.Title)</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <span class="badge @(item.IsActive == true ? "bg-success" : "bg-secondary")">
                            @(item.IsActive == true ? "Hiển thị" : "Ẩn")
                        </span>
                    </td>
                    <td>
                        <a href="@Url.Action("Details", "BlogPosts", new { id = item.Id })" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Chi tiết
                        </a>
                        <a href="@Url.Action("Edit", "BlogPosts", new { id = item.Id })" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a href="@Url.Action("Delete", "BlogPosts", new { id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa bài viết này?');">
                            <i class="fas fa-trash-alt"></i> Xoá
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Create", "BlogPosts")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm bài viết mới
    </a>
</div>
