@model List<DBStoreSport.Models.BlogPost>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner Carousel -->
<div id="blogBannerCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
  <div class="carousel-inner">
      <div class="carousel-item active">
          <img src="~/Content/images/Pin11.jpg" class="d-block w-100" style="height: 350px; object-fit: cover;" alt="Banner 1">
          <div class="carousel-caption d-none d-md-block">
              <h1 class="display-4 fw-bold text-shadow">RunVn</h1>
              <p class="fs-4 text-shadow">BLOG</p>
          </div>
      </div>
    <div class="carousel-item">
      <img src="~/Content/images/bannner6.jpg" class="d-block w-100" style="height: 350px; object-fit: cover;" alt="Banner 2">
      <div class="carousel-caption d-none d-md-block">
          <h1 class="display-4 fw-bold text-shadow">RunVn</h1>
        <p class="fs-4 text-shadow">BLOG</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="~/Content/images/videoframe_3479.png" class="d-block w-100" style="height: 350px; object-fit: cover;" alt="Banner 3">
      <div class="carousel-caption d-none d-md-block">
          <h1 class="display-4 fw-bold text-shadow">RunVn</h1>
        <p class="fs-4 text-shadow">BLOG</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#blogBannerCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#blogBannerCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
  </button>
</div>

<!-- Blog Cards -->
    <div class="container my-5">
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <a href="@Url.Action("Detail", "BlogPosts", new { id = item.Id })" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm border-0">
                            <img src="@Url.Content(item.Image ?? "~/Content/images/no-image.jpg")"
                                 class="card-img-top"
                                 style="height: 200px; object-fit: cover;" />

                            <div class="card-body">
                                <h5 class="card-title fw-bold">@item.Title</h5>

                                <div class="mb-2 text-muted" style="font-size: 0.875rem;">
                                    <i class="fas fa-user me-1"></i> Admin
                                    <i class="fas fa-calendar-alt ms-3 me-1"></i> @item.CreatedDate
                                </div>

                                <p class="card-text">
                                    @Html.Raw(item.Content.Length > 100
                                        ? item.Content.Substring(0, 100) + "..."
                                        : item.Content)
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
