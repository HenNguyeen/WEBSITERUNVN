@model DBStoreSport.Models.BlogPost
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tags = Model.Tags?.Split(',') ?? new string[] { };
    var relatedIds = Model.RelatedProductIds?.Split(',').Select(Int32.Parse).ToList() ?? new List<int>();
    var relatedProducts = ViewBag.RelatedProducts as List<DBStoreSport.Models.Product>;
}

<div class="container mt-4">
    <!-- Banner -->
    <div class="blog-banner mb-4 p-4 text-white rounded" style="background: #0d1b2a;">
        <h1 class="display-5 fw-bold">@Model.Title</h1>
        <p class="lead"> <strong></strong> vào @Model.CreatedDate</p>
    </div>

    <!-- Ảnh chính -->
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <div class="text-center mb-4">
            <img src="@Url.Content(Model.Image)" class="img-fluid rounded" style="max-height:400px; object-fit:cover;" />
        </div>
    }

    <!-- Nội dung -->
    <div class="blog-content mb-4" style="line-height: 1.8; font-size: 18px;">
        @Html.Raw(Model.Content)
    </div>

    <!-- Tags -->
    @if (tags.Any())
    {
        <p>
            <strong>Tags:</strong>
            @foreach (var tag in tags)
            {
                <a href="#" class="badge bg-secondary me-1">@tag.Trim()</a>
            }
        </p>
    }

    <!-- Sản phẩm liên quan -->
    @if (relatedProducts != null && relatedProducts.Any())
    {
        <hr />
        <h4>Sản phẩm liên quan</h4>
        <div class="row">
            @foreach (var sp in relatedProducts)
            {
                <div class="col-md-4 mb-3">
                    <div class="card h-100">
                        <img src="@Url.Content(sp.ImagePro)" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title">@sp.NamePro</h5>
                            <p class="card-text text-danger fw-bold">
                                @sp.Price?.ToString("N0") ₫
                            </p>
                            <a href="/Product/Detail/@sp.ProductID" class="btn btn-sm btn-outline-primary">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyLink() {
            const url = window.location.href;
            navigator.clipboard.writeText(url).then(() => {
                alert('Đã copy liên kết bài viết!');
            });
        }
    </script>
}
