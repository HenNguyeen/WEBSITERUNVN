@model IEnumerable<DBStoreSport.Models.Category>

<style>
    .category-list {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        padding: 18px 0;
        margin: 0;
        list-style: none;
    }
    .category-item {
        margin: 0;
    }
    .category-link {
        color: #222;
        text-decoration: none;
        font-size: 1.08rem;
        font-weight: 500;
        display: block;
        padding: 12px 24px;
        border-radius: 8px;
        transition: background 0.2s, color 0.2s;
        border-bottom: 1px solid #f0f0f0;
    }
    .category-item:last-child .category-link {
        border-bottom: none;
    }
    .category-link:hover, .category-link.active {
        background: #f0fdf4;
        color: #22c55e;
    }
</style>

<ul class="category-list">
    @foreach (var item in Model)
    {
        <li class="category-item">
            @Html.ActionLink(item.NameCate, "ProductList", "Products", new { category = item.IDCate }, new { @class = "category-link" })
        </li>
    }
</ul>
