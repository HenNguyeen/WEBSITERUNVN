@model DBStoreSport.Models.Category

@{
    ViewBag.Title = "Thêm loại sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4 w-100" style="max-width: 500px; border-radius: 18px;">
        <h2 class="mb-3 text-center text-primary fw-bold">Thêm loại sản phẩm</h2>
        <p class="text-center text-muted mb-4">Điền thông tin loại sản phẩm vào biểu mẫu bên dưới</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">
                @Html.LabelFor(model => model.NameCate, htmlAttributes: new { @class = "form-label fw-semibold" })
                @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg fw-bold shadow-sm">Thêm loại sản phẩm</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Quay lại danh sách</a>
            </div>
        }
    </div>
</div>
