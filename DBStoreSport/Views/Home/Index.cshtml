    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modern-hero">
    <div class="modern-hero-content">
        <div class="modern-hero-left">
            <div class="modern-hero-logo">
                <img src="~/Content/images/Pin11.jpg" alt="Logo" />
            </div>
            <h1 class="modern-hero-title">
                <span class="modern-hero-icon">🟢</span> RunVn
            </h1>
            <p class="modern-hero-desc">
                RunVn là cửa hàng bán giày bóng rổ chính hãng 100% nhập khẩu từ Hoa Kỳ (USA), với nhiều mẫu giày cho khách hàng lựa chọn.
            </p>
            <a href="/Products/ProductList" class="modern-hero-btn">GO TO SHOP NOW!</a>
        </div>
        <div class="modern-hero-right">
            <img src="~/Content/images/giay1-removebg-preview (1).png" class="modern-hero-shoe" alt="Shoe 1" />
            <img src="~/Content/images/giay2-removebg-preview (1).png" class="modern-hero-shoe" alt="Shoe 2" />
            <img src="~/Content/images/Pin17-removebg-preview (2).png" class="modern-hero-shoe" alt="Shoe 3" />
            <img src="~/Content/images/PIn15-removebg-preview (1).png" class="modern-hero-shoe" alt="Shoe 4" />
        </div>
    </div>
    <div class="modern-hero-bg"></div>
</div>

<!-- Giới thiệu về shop -->
<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <img src="~/Content/images/Pin3.jpg" class="img-hover-effect" alt="Giới thiệu shop" />
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold mb-3 text-success">ABOUT SHOP</h2>
            <h3 class="mb-2">RunVN_SHOP Number 1</h3>
            <p>RunVN_SHOP is a store that sells 100% authentic basketball shoes imported from the United States (USA).</p>
            <div class="row mb-3">
                <div class="col-6">
                    <img src="~/Content/images/0daa96b7fd0135f07ec72e1859acd2fc.jpg" class="img-fluid rounded" alt="Shoe 2" />
                </div>
                <div class="col-6">
                    <img src="~/Content/images/Pin2.jpg" class="img-fluid rounded" alt="Shoe 3" />
                </div>
            </div>
            <a href="/Products/ProductList" class="btn btn-success px-4 py-2">Shop Now!</a>
        </div>
    </div>
</div>

<!-- Lợi ích của shop -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="p-4 bg-light rounded shadow-sm h-100">
                <div class="mb-3" style="font-size:2.5rem; color:#2ecc71;"><i class="fas fa-money-bill-wave"></i></div>
                <h5 class="fw-bold">The price is right</h5>
                <p>Share lessons as your own, 100% cheat free</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4 bg-light rounded shadow-sm h-100">
                <div class="mb-3" style="font-size:2.5rem; color:#3498db;"><i class="fas fa-award"></i></div>
                <h5 class="fw-bold">Good service</h5>
                <p>Good service, fast and prompt, quick response, fast package, fast delivery, received the product on time.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4 bg-light rounded shadow-sm h-100">
                <div class="mb-3" style="font-size:2.5rem; color:#27ae60;"><i class="fas fa-globe"></i></div>
                <h5 class="fw-bold">Long warranty</h5>
                <p>If the customer finds a fake item, they can get a 100% refund.</p>
            </div>
        </div>
    </div>
</div>
<div class="container my-5">
    <h2 class="fw-bold text-center text-success mb-4">BRANDS WE OFFER</h2>
    <div class="row text-center">
        <div class="col-6 col-md-3 mb-3">
            <div class="img-container">
                <img src="~/Content/images/th5.jpg"  class="img-hover-effect" alt="Shoe" />
            </div>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <div class="img-container">
                <img src="~/Content/images/th2.jpg" class="img-hover-effect" alt="Shoe" />
            </div>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <div class="img-container">
                <img src="~/Content/images/th3.jpg" class="img-hover-effect" alt="Jordan" />
            </div>
        </div>
        <div class="col-6 col-md-3 mb-3">
            <div class="img-container">
                <img src="~/Content/images/th6.jpg" class="img-hover-effect" alt="Under Armour" />
            </div>
        </div>
    </div>
</div>
<!-- Chính sách của shop -->
<div class="container my-5">
    <h2 class="fw-bold text-center text-success mb-4">OUR POLICIES</h2>
    <div class="row">
        <div class="col-md-6 mb-4">
            <h5 class="fw-bold">🚚 Chính sách giao hàng</h5>
            <p>Giao hàng toàn quốc trong vòng 2–5 ngày. Miễn phí vận chuyển cho đơn hàng từ 1 triệu đồng trở lên.</p>
        </div>
        <div class="col-md-6 mb-4">
            <h5 class="fw-bold">🔁 Chính sách đổi trả</h5>
            <p>Hỗ trợ đổi hàng trong vòng 7 ngày kể từ khi nhận sản phẩm nếu bị lỗi do nhà sản xuất hoặc không đúng mô tả.</p>
        </div>
    </div>
</div>
<style>
    .img-container {
        overflow: hidden;
        border-radius: 8px;
    }

    .img-hover-effect {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: block;
    }

        .img-hover-effect:hover {
            transform: scale(1.08);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
        }
</style>