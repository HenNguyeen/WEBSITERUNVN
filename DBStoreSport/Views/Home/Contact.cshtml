@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CSS nội bộ -->
<style>
    .contact-section {
        font-family: 'Segoe UI', sans-serif;
        padding: 60px 15px;
    }

    .contact-section h2 {
        font-size: 32px;
        color: #222;
        text-align: center;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .contact-section p.text-muted {
        text-align: center;
        margin-bottom: 40px;
        color: #666;
    }

    .contact-section .form-label {
        font-weight: 500;
    }

    .contact-section .btn {
        font-weight: 600;
        padding: 10px 0;
        transition: background 0.3s ease;
    }

    .contact-section .btn:hover {
        background-color: #333 !important;
        color: #fff !important;
    }

    .contact-section .info ul {
        padding-left: 0;
        list-style: none;
    }

    .contact-section .info ul li {
        margin-bottom: 10px;
        font-size: 16px;
    }

    .contact-section iframe {
        border-radius: 8px;
        border: none;
        width: 100%;
    }

    media (max-width: 768px) {
        .contact-section {
            padding: 30px 10px;
        }
    }
</style>

<div class="contact-section container">
    <h2>Liên hệ với chúng tôi</h2>
    <p class="text-muted">Bạn có câu hỏi, góp ý, hoặc muốn hợp tác? Vui lòng để lại tin nhắn bên dưới.</p>

    <div class="row">
        <!-- Form liên hệ -->
        <div class="col-md-6 mb-4">
            <div class="card p-4 shadow border-0">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label class="form-label">Họ tên</label>
                        <input type="text" name="Name" class="form-control" placeholder="Nhập họ tên của bạn" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="Email" class="form-control" placeholder="example@gmail.com" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nội dung</label>
                        <textarea name="Message" class="form-control" rows="5" placeholder="Viết nội dung liên hệ tại đây..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-dark w-100">📨 Gửi liên hệ</button>
                }
            </div>
        </div>

        <!-- Thông tin -->
        <div class="col-md-6 mb-4">
            <div class="info p-4 bg-light rounded shadow-sm">
                <h4 class="fw-semibold mb-3">Thông tin liên hệ</h4>
                <ul>
                    <li><strong>📍 Địa chỉ:</strong> 123 Trần Hưng Đạo, TP.HCM</li>
                    <li><strong>📞 Điện thoại:</strong> 0909 123 456</li>
                    <li><strong>📧 Email:</strong> shopgiay@gmail.com</li>
                    <li><strong>🌐 Facebook:</strong> <a href="https://fb.com/shopgiay" target="_blank">fb.com/shopgiay</a></li>
                </ul>

                <h5 class="mt-4">📌 Bản đồ</h5>
                <iframe src="https://www.google.com/maps/embed?pb=..." height="250" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>
